{
  "compilerOptions": {
    "outDir": "../dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "webworker"]
  },
  "ts-node": {
    // these options are overrides used only by ts-node
    // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true
    }
  }
}